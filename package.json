{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "npm run build && chmod u+x ./dist/main.cli.js && ./dist/main.cli.js",
    "mock:server": "npx json-server mocks/mock-server-data.json"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/node": "^18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^0.17.3",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.2.0",
    "@types/convict-format-with-validator": "^6.0.5",
    "chalk": "^5.3.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "1.11.10",
    "dotenv": "^16.4.5",
    "got": "^11.8.2",
    "inversify": "^6.0.2",
    "mongoose": "^8.2.4",
    "pino": "^8.19.0",
    "reflect-metadata": "^0.2.1"
  }
}
